<% def my_input(*item_name) %>
  <% item_name.each do |name| %>
    <label for="<%= name %>">  <%= name %> </label>
    <input type="text" name="<%= name %>" id="<%= name %>" class="fancy_form" >
  <% end %>
<% end %>


